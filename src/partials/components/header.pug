  a.header__logo(href="/" rel="noopener noreferrer" aria-label="Link to home section") Area

  ul.header__list
    li.header__list__item
      a.header__list__item__link(href="#benefits", rel="noopener noreferrer" aria-label="Link to Benefits section")
        span.real Benefits
        span.fake Benefits
    li.header__list__item
      a.header__list__item__link(href="#specifications", rel="noopener noreferrer" aria-label="Link to Specifications section")
        span.real Specifications
        span.fake Specifications
    li.header__list__item
      a.header__list__item__link(href="#how-to", rel="noopener noreferrer" aria-label="Link to How-to section")
