        span.fake How-to
    li.header__list__item
      a.header__list__item__link(href="#contact-us", rel="noopener noreferrer" aria-label="Link to Contact Us section")
        span.real Contact Us
        span.fake Contact Us

  a.header__link(href="https://www.figma.com/sites/?fuid=1108818761824813856" rel="noopener noreferrer" target="_blank"
